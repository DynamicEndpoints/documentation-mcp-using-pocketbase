# PocketBase Configuration
# Copy this file to .env and fill in your actual values

# PocketBase Server URL (your specific instance)
POCKETBASE_URL=https://sage-worm.pikapod.net

# Alternative URL variable names (any of these will work)
# POCKETBASE_SERVER_URL=https://sage-worm.pikapod.net
# PB_URL=https://sage-worm.pikapod.net
# PB_SERVER_URL=https://sage-worm.pikapod.net

# PocketBase Admin Credentials
POCKETBASE_EMAIL=randy@playhousehosting.com
POCKETBASE_PASSWORD=your-actual-password-here

# Alternative credential variable names (any of these will work)
# POCKETBASE_ADMIN_EMAIL=randy@playhousehosting.com
# POCKETBASE_ADMIN_PASSWORD=your-actual-password-here
# PB_EMAIL=randy@playhousehosting.com
# PB_PASSWORD=your-actual-password-here
# PB_ADMIN_EMAIL=randy@playhousehosting.com
# PB_ADMIN_PASSWORD=your-actual-password-here
# ADMIN_EMAIL=randy@playhousehosting.com
# ADMIN_PASSWORD=your-actual-password-here

# Collection Configuration
DOCUMENTS_COLLECTION=documents

# Alternative collection variable names
# DOCUMENTS_COLLECTION_NAME=documents
# DEFAULT_COLLECTION=documents

# Optional Settings
DEBUG=false
READ_ONLY_MODE=false
AUTO_CREATE_COLLECTION=true

# Server Configuration (for HTTP mode)
HTTP_PORT=3000
TRANSPORT_MODE=stdio

# Node.js Environment
NODE_ENV=development

# Optional: Custom timeout settings (in milliseconds)
# FETCH_TIMEOUT=30000
